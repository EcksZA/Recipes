<% content_for(:title, 'Content | Recipes') %>

<h1>Contributors Content</h1>

<% @contributors.each do |contributor| %>
  <ul>
    <li><a href="/contributors/<%= contributor.id %>"><%= contributor.title %></li>
    <% contributor.tags.each do |tag| %>
      <p><%= tag.name %><p>
    <% end %>
  </ul>
<% end %>

<p><a href="/contributors/new">Add a new recipe</a></p>
