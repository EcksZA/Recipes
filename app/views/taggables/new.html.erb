<% content_for(:title, 'Add Tag | Recipes') %>

<h1>Tag The Recipes</h1>

<p><%= @contributor.title %></p>

<p>Add a tag</p>

<select name='taggable[tag_id]' form='taggable'>
  <option value=''>Add a tag</option>
  <% @tag.each do |tag| %>
    <option value='<%= tag.id %>'><%= tag.name %></option>
  <% end %>
</select>

<form id='taggable' action="/contributors/<%= @contributor.id %>/success" method='post' >
  <input id='taggable_contributor' name='taggable[contributor_id]' type='hidden' value='<%= @contributor.id %>'>
  <button>Add tag</button>
</form>


