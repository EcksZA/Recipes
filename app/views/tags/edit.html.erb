<% content_for(:title, 'Edit | Recipes') %>

<h1>Edit This Recipe</h1>

<%= render('layouts/errors', :object => @tag) %>

<form id='tag' action="/tags/<%= @tag.id %>" method='post'>
  <input name='_method' type='hidden' value='patch'>
  <%= render('form') %>
  <button>Edit Recipe</button>
</form>

<p><a href="/tags">Return to main menu</a></p>
<p><a href="/tags/new">Create a new tag</a></p>
<p><a href="/tags/<%= @tag.id %>"
      data-confirm='Are you sure you want to delete this tag?'
      data-method='delete'
      rel='nofollow'>Delete this tag</a></p>
